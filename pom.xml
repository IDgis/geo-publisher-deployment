<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<groupId>nl.idgis.publisher.deployment</groupId>
	<artifactId>geo-publisher-deployment</artifactId>
	<version>1.4.5-SNAPSHOT</version>
	<packaging>pom</packaging>
	<name>Geo Publisher deployment</name>
	
	<properties>
		<geo-publisher.version>1.4.5</geo-publisher.version>
		<geopublisher-viewer.version>1.1</geopublisher-viewer.version>
		<geoserver.version>2.6.1-gpo-3</geoserver.version>
	</properties>
	
	<scm>
		<connection>scm:git:git@github.com:IDgis/geo-publisher-deployment.git</connection>
		<developerConnection>scm:git:git@github.com:IDgis/geo-publisher-deployment.git</developerConnection>
		<url>https://github.com/IDgis/geo-publisher-deployment</url>
		<tag>HEAD</tag>
	</scm>
		
	<repositories>
		<repository>
			<id>idgis-public</id>
			<url>http://nexus.idgis.eu/content/groups/public/</url>
			<releases>
				<updatePolicy>never</updatePolicy>
			</releases>
			<snapshots>
				<enabled>true</enabled>
			</snapshots>
		</repository>
		<repository>
			<id>idgis-thirdparty</id>
			<url>http://nexus.idgis.eu/content/repositories/thirdparty/</url>
			<releases>
				<updatePolicy>never</updatePolicy>
			</releases>
		</repository>
		<repository>
			<id>deegree-repo</id>
			<url>http://repo.deegree.org/content/groups/public/</url>
			<releases>
				<updatePolicy>never</updatePolicy>
			</releases>
			<snapshots>
				<enabled>true</enabled>
			</snapshots>
		</repository>		
		<repository>
			<id>opengeo</id>
			<name>OpenGeo Maven Repository</name>
			<url>http://repo.opengeo.org/</url>
		</repository>
	</repositories>

	<distributionManagement>
		<repository>
			<id>idgis-releases</id>
			<url>http://nexus.idgis.eu/content/repositories/releases/</url>
		</repository>
		<snapshotRepository>
			<id>idgis-snapshots</id>
			<url>http://nexus.idgis.eu/content/repositories/snapshots/</url>
		</snapshotRepository>
	</distributionManagement>
		
	<modules>
		<module>geo-publisher-services</module>
		<module>geo-publisher-provider</module>
	</modules>
	
	<build>
		<pluginManagement>
				<plugins>	
					<plugin>
						<groupId>org.apache.maven.plugins</groupId>
						<artifactId>maven-compiler-plugin</artifactId>
						<configuration>
							<source>1.8</source>
							<target>1.8</target>
							<encoding>utf-8</encoding>
						</configuration>
					</plugin>
					
					<plugin>
						<groupId>org.apache.maven.plugins</groupId>
						<artifactId>maven-release-plugin</artifactId>
						<version>2.5.2</version>
						<configuration>
							<goals>install</goals>
							<!-- no 'deploy' in order to be able to use release:perform without maven repository -->
							<autoVersionSubmodules>true</autoVersionSubmodules>
							<pushChanges>false</pushChanges>
						</configuration>
					</plugin>
				</plugins>
		</pluginManagement>
	
		<plugins>
			<!-- Configure the release plugin: -->
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-release-plugin</artifactId>
				
				<configuration>
					<goals>install</goals>
					
					<autoVersionSubmodules>true</autoVersionSubmodules>
					<pushChanges>false</pushChanges>
				</configuration>
			</plugin>
		</plugins>
	</build>
	
</project>
